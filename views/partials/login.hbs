<html lang="en">
<head>
    <title>LOGIN</title>
    <link href="../../public/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="../../public/css/styles.css" rel="stylesheet" type="text/css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">LOGIN</a>
        <a class="navbar-brand" href="/blog">BLOG</a>
        <a class="navbar-brand" href="/article/:id">ARTICLES</a>
    </nav>
    <div class="container">
        <div class="col-md-12">
            {{# if errors }}
              {{# each errors }}
                <p class="alert alert-danger">{{ this.msg }}</p>
              {{/each}}
            {{/if}}
            <form method="post" action="/login/login-user">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger btn-block">Create</button>
                </div>
            </form>
            <div class="form-group">
                    <button type="button" class="btn btn-danger btn-block"><a style="text-decoration: none ; color : white" href="/regist">SignUp</a></button>
                </div>
        </div>
    </div>
</body>
</html>